{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",  
  "height": 350, 
  "title": {
    "text": "Average Daily Temperature Fluctuations by Month"
  },
  "data": {
    "url": "data/temp_summary.csv"
  },
  "params": [
    {
      "name": "Location_selection",
      "bind": {
        "input": "select",
        "options": [
          "Albury", "BadgerysCreek", "Cobar", "CoffsHarbour", "Moree",
          "Newcastle", "NorahHead", "NorfolkIsland", "Penrith", "Richmond",
          "Sydney", "SydneyAirport", "WaggaWagga", "Williamtown", "Wollongong",
          "Canberra", "Tuggeranong", "MountGinini", "Ballarat", "Bendigo",
          "Sale", "Melbourne", "Mildura",
          "Portland", "Watsonia", "Dartmoor", "Brisbane", "Cairns",
          "GoldCoast", "Townsville", "Adelaide", "MountGambier", "Nuriootpa",
          "Woomera", "Albany", "Witchcliffe", "PearceRAAF", "PerthAirport",
          "Perth", "SalmonGums", "Walpole", "Hobart", "Launceston",
          "AliceSprings", "Darwin", "Katherine", "Uluru"
        ],
        "name": "Select Location: "
      },
      "value": "Melbourne"
    },
    {
      "name": "Year_selection",
      "bind": {
        "input": "range",
        "min": 2010,
        "max": 2016,
        "step": 1,
        "name": "Select Year: "
      },
      "value": 2016
    }
  ],
  "transform": [
    {
      "filter": "datum.Location == Location_selection"
    },
    {
      "filter": "datum.Year == Year_selection"
    }
  ],
  "mark": "bar",
  "encoding": {
    "x": {
          "field": "Month",
          "type": "ordinal",
          "title": "Month",
          "sort": ["January", "February", "March", "April", "May", "June",
                   "July", "August", "September", "October", "November", "December"],
          "axis": {
            "labelAngle": 0
          }
        },
    "y": {
      "field": "average_daily_fluctuations",
      "type": "quantitative",
      "title": "Average Daily Temperature Fluctuation (°C)",
      "scale": {
        "domain": [0, 16]
      }
    },
    "tooltip": [
      {"field": "Month", "type": "ordinal", "title": "Month"},
      {"field": "average_daily_fluctuations", "type": "quantitative", "title": "Daily Temp Fluctuation (°C)"}
    ]
  }
}
