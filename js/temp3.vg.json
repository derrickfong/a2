{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": "container",  
  "height": 350, 
  "data": {
      "url": "data/triple.csv"
  },
  "title": "Monthly Average Temperature Data by Location",
  "params": [
      {
          "name": "State_selection",
          "bind": {
              "input": "select",
              "options": [
                  "New South Wales",
                  "Victoria",
                  "Queensland",
                  "South Australia",
                  "Western Australia",
                  "Tasmania",
                  "Northern Territory"
              ],
              "name": "Select State: "
          },
          "value": "New South Wales" 
      }
  ],
  "transform": [
      {
          "filter": "datum.State === State_selection"  
      }
  ],
  "config": {
      "view": {
          "strokeWidth": 0,
          "step": 13
      },
      "axis": {
          "domain": false
      }
  },
  "mark": "rect",
  "encoding": {
      "x": {
          "field": "Month",
          "type": "ordinal",
          "title": "Month",
          "sort": ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"]
      },
      "y": {
          "field": "Location",
          "type": "nominal",
          "title": "Location"
      },
      "color": {
          "field": "average_temp",
          "type": "quantitative",
          "title": "Average Temperature (°C)",
  
          "legend": {
              "title": "Average Temperature (°C)",
              "orient": "bottom"  
          }
      }
  },
  "tooltip": [
      {"field": "Location", "title": "Location"},
      {"field": "Month", "title": "Month"},
      {"field": "average_temp", "title": "Average Temperature (°C)"},
      {"field": "State", "title": "State"}
  ]
}
